<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="processEngineConfiguration" class="org.activiti.engine.impl.cfg.StandaloneInMemProcessEngineConfiguration">
    <property name="jdbcUrl" value="jdbc:oracle:thin:@localhost:1521:XE" />
    <property name="jdbcDriver" value="oracle.jdbc.OracleDriver" />
    <property name="jdbcUsername" value="system" />
    <property name="jdbcPassword" value="xyz" />
    <property name="databaseSchema" value="drop-create"/>
    <property name="historyLevel" value="FULL"/>

    <!--<property name="jdbcUrl" value="jdbc:h2:mem:activiti;DB_CLOSE_DELAY=1000"/>-->
    <!--<property name="jdbcDriver" value="org.h2.Driver"/>-->
    <!--<property name="jdbcUsername" value="sa"/>-->
    <!--<property name="jdbcPassword" value=""/>-->

    <property name="jobExecutor" ref="jobExecutor"/>
  </bean>

  <bean id="jobExecutor" class="org.activiti.engine.impl.jobexecutor.DefaultJobExecutor">
    <property name="maxJobsPerAcquisition" value="50"/>
  </bean>

  <!--<bean id="jobExecutor" class="org.activiti.engine.impl.jobexecutor.LockFreeJobExecutor"/>-->

  <bean id="noop" class="org.activiti.Wait">
    <constructor-arg value="5"/>
  </bean>
</beans>
